citHeader("To cite the 'SRMData' package in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry="Manual",
         title = "{SRMData: Datasets for the Social Relations Model}",
         author = personList(
                     as.person("Alexander Robitzsch"), 
                     as.person("Oliver Luedtke")
                  ),
         year = year,
         note = vers,
         url = "https://github.com/alexanderrobitzsch/SRMData" ,
         textVersion =
             paste0("Robitzsch, A., & Luedtke, O. (",  year,"). 
               SRMData: Datasets for the Social Relations Model. ",
               vers, 
               ". https://github.com/alexanderrobitzsch/SRMData")
               )

